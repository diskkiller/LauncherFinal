<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="900px"
        android:layout_height="540px"
        android:layout_gravity="center"
        android:background="@drawable/bg_window_outer">

        <com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout
            android:id="@+id/fl_del_lotti_sure_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6px"
            android:layout_marginTop="6px"
            android:clickable="true"
            android:focusable="true"
            android:padding="20px">

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@drawable/img_chacha" />

        </com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210px"
            android:text="确认删除此订单？删除后将无法查看订单相关内容!"
            android:textColor="@color/main_yellow"
            android:textSize="34px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_del_lotti_sure_cancel"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="231px"
            android:background="@drawable/bg_widow_btn_gray"
            android:clickable="true"
            android:focusable="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="24px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_del_lotti_sure"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="37px"
            android:layout_toRightOf="@id/btn_del_lotti_sure_cancel"
            android:background="@drawable/bg_widow_btn_yellow"
            android:clickable="true"
            android:focusable="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>