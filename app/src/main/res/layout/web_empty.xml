<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240px"
            android:layout_height="200px"
            android:layout_marginBottom="4px"
            android:background="@drawable/img_err" />

        <TextView
            android:id="@+id/tv_err_call_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="糟糕!页面走丢了"
            android:textColor="@color/black2"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_err_call_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="点我重试"
            android:textColor="@color/black2"
            android:textSize="20px" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>