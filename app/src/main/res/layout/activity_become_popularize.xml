<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="900px"
        android:layout_height="540px"
        android:layout_gravity="center"
        android:background="@drawable/bg_window_outer">

        <com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout
            android:id="@+id/fl_become_popularize_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6px"
            android:layout_marginTop="6px"
            android:clickable="true"
            android:padding="20px">

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@drawable/img_chacha" />

        </com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout>

        <TextView
            android:id="@+id/tv_become_popularize_state_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="277px"
            android:layout_marginTop="210px"
            android:text="当前设备状态:  "
            android:textColor="@color/black2"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210px"
            android:layout_toRightOf="@id/tv_become_popularize_state_left"
            android:text="未推广"
            android:textColor="@color/black3"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_become_popularize_code_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_become_popularize_state_left"
            android:layout_below="@id/tv_become_popularize_state_left"
            android:layout_marginTop="27px"
            android:text="推广码"
            android:textColor="@color/black2"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_become_popularize_state_left"
            android:layout_marginLeft="12px"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@id/tv_become_popularize_code_left">

            <TextView
                android:id="@+id/tv_become_popularize_code"
                android:layout_width="239px"
                android:layout_height="50px"
                android:background="@color/main_popularize_edit_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="12px"
                android:paddingRight="12px"
                android:textColor="@color/white"
                android:textSize="24px"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_become_popularize_code"
                android:layout_width="239px"
                android:layout_height="50px"
                android:background="@color/main_popularize_edit_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:hint="商家录入的手机号"
                android:paddingLeft="12px"
                android:paddingRight="12px"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_become_popularize_edit"
                android:textSize="24px"
                tools:ignore="HardcodedText" />

        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_become_popularize_cancel"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="231px"
            android:background="@drawable/bg_widow_btn_gray"
            android:clickable="true"
            android:focusable="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="24px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_become_popularize_sure"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="37px"
            android:layout_toRightOf="@id/btn_become_popularize_cancel"
            android:background="@drawable/bg_widow_btn_yellow"
            android:clickable="true"
            android:focusable="true"
            android:text="推广"
            android:textColor="@color/white"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>