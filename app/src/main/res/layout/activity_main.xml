<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="39px"
        android:background="@drawable/bg_main_lottery" />

    <View
        android:id="@+id/view_main_toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="151px"
        android:background="@drawable/bg_main_toolbar_lottery"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="151px"
        android:background="@color/bg_toolbar"
        android:clickable="true"
        android:elevation="@dimen/x8"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_main_toolbar_logo"
            android:layout_width="243px"
            android:layout_height="112px"
            android:layout_marginLeft="39px"
            android:layout_marginTop="15px"
            android:src="@drawable/img_huacai_logo" />

        <com.jess.arms.widget.autolayout.AutoTabLayout
            android:id="@+id/tab_main_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="330px"
            android:layout_marginRight="350px"
            app:tabBackground="@drawable/sl_tab_bg"
            app:tabGravity="center"
            app:tabIndicatorHeight="0px"
            app:tabMaxWidth="@dimen/x220"
            app:tabMode="scrollable" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_main_toolbar_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <com.zhongti.huacailauncher.widget.bamUI.BamRoundedImgView
                android:id="@+id/iv_main_toolbar_tx"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/img_user_head_default"
                app:riv_oval="true" />

            <com.zhongti.huacailauncher.widget.bamUI.BamTextView
                android:id="@+id/iv_main_toolbar_loginStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="17px"
                android:gravity="center"
                android:paddingRight="20px"
                android:text="未登录"
                android:textColor="@color/white"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="39px"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:clickable="true"
        android:elevation="@dimen/x8"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_bottom_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black5"
            android:textSize="20px"
            tools:text="地区：北京市" />

        <TextView
            android:id="@+id/tv_main_bottom_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black5"
            android:textSize="20px"
            tools:text="商家：应该十个字应该十个字" />

        <TextView
            android:id="@+id/tv_main_bottom_deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/black5"
            android:textSize="20px"
            tools:text="设备：未命名90827" />

        <TextView
            android:id="@+id/tv_main_bottom_deviceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/black5"
            android:textSize="20px"
            tools:text="编号：29048732108971490827 " />

        <TextView
            android:id="@+id/tv_main_bottom_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/black5"
            android:textSize="20px"
            tools:text="客服：400-88886666" />

        <TextView
            android:id="@+id/tv_main_bottom_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/black5"
            android:textSize="20px"
            tools:text="技术：中体华彩（北京）信息技术有限公司" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>