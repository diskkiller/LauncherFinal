<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_check_ticket_live_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_check_ticket_live_toolbar">

        <com.zhongti.huacailauncher.widget.auto.AutoCardView
            android:id="@+id/card_check_ticket_live_left"
            android:layout_width="1260px"
            android:layout_height="884px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="26px"
            app:cardBackgroundColor="@color/live_bg1"
            app:cardCornerRadius="@dimen/x20"
            app:cardElevation="@dimen/x5">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_check_ticket_live_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="24px"
                    android:text="所在：北京【频道】"
                    android:textColor="@color/black1"
                    android:textSize="26px" />

                <com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout
                    android:id="@+id/fl_check_ticket_live_jb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15px"
                    android:layout_marginTop="11px"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="10px"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:paddingTop="20px">

                    <ImageView
                        android:layout_width="80px"
                        android:layout_height="30px"
                        android:src="@drawable/img_jubao" />

                </com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout>

                <SurfaceView
                    android:id="@+id/surface_check_ticket_live"
                    android:layout_width="1198px"
                    android:layout_height="648px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="73px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/surface_check_ticket_live"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="31px"
                    android:layout_marginRight="31px"
                    android:layout_marginTop="20px"
                    android:lineSpacingExtra="@dimen/y5"
                    android:text="@string/check_ticket_live_warning"
                    android:textColor="@color/black2"
                    android:textSize="22px" />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhongti.huacailauncher.widget.auto.AutoCardView>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_check_ticket_live_rt"
            android:layout_width="600px"
            android:layout_height="127px"
            android:layout_marginLeft="23px"
            android:layout_marginTop="26px"
            android:layout_toRightOf="@id/card_check_ticket_live_left"
            android:background="@drawable/bg_live_coner_20">

            <TextView
                android:id="@+id/tv_check_ticket_live_f_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="24px"
                android:textColor="@color/main_yellow"
                android:textSize="26px"
                tools:text="正在验票" />

            <TextView
                android:id="@+id/tv_check_ticket_live_f_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19px"
                android:layout_marginTop="24px"
                android:textColor="@color/black2"
                android:textSize="26px"
                tools:text="种类：大吉大利" />

            <TextView
                android:id="@+id/tv_check_ticket_live_f_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_check_ticket_live_f_status"
                android:layout_marginLeft="24px"
                android:layout_marginTop="5px"
                android:textColor="@color/black2"
                android:textSize="26px"
                tools:text="票号：3502923858208003" />

            <TextView
                android:id="@+id/tv_check_ticket_live_f_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_check_ticket_live_f_name"
                android:layout_below="@id/tv_check_ticket_live_f_name"
                android:layout_marginTop="5px"
                android:textColor="@color/black2"
                android:textSize="26px"
                tools:text="面值：10元" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="600px"
            android:layout_height="735px"
            android:layout_below="@id/rl_check_ticket_live_rt"
            android:layout_marginLeft="23px"
            android:layout_marginTop="22px"
            android:layout_toRightOf="@id/card_check_ticket_live_left"
            android:background="@drawable/bg_live_coner_20"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@drawable/img_yp_list_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="验票进度"
                    android:textColor="@color/live_yellow"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoFrameLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="队列"
                    android:textColor="@color/black3"
                    android:textSize="20px" />

                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验票票号"
                    android:textColor="@color/black3"
                    android:textSize="20px" />

                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:text="状态"
                    android:textColor="@color/black3"
                    android:textSize="20px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black5" />

            <com.zhongti.huacailauncher.widget.auto.AutoSmartRefreshLayout
                android:id="@+id/refresh_check_ticket_live"
                style="@style/refresh_style"
                android:layout_width="match_parent"
                android:layout_height="432px"
                android:background="@color/white"
                app:srlEnablePureScrollMode="true">

                <com.scwang.smartrefresh.header.WaterDropHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_check_ticket_live_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.zhongti.huacailauncher.widget.auto.AutoSmartRefreshLayout>

            <TextView
                android:id="@+id/tv_check_ticket_live_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9px"
                android:textColor="@color/black3"
                android:textSize="24px"
                tools:text="您前方还有 8  人等待验票" />

            <com.zhongti.huacailauncher.widget.bamUI.BamImageView
                android:id="@+id/iv_check_ticket_live_cancel"
                android:layout_width="170px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16px"
                android:src="@drawable/img_yp_cancel"
                android:visibility="gone" />


        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fl_check_ticket_live_toolbar"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/img_yp_top_tile">

        <com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout
            android:id="@+id/fl_check_ticket_live_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:clickable="true"
            android:focusable="true"
            android:padding="20px">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/img_live_close" />
        </com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout>

    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoRelativeLayout>