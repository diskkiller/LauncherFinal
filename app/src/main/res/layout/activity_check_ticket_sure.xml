<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="900px"
        android:layout_height="540px"
        android:layout_gravity="center"
        android:background="@drawable/bg_window_outer_white">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/fl_check_ticket_sure_content"
            android:layout_width="match_parent"
            android:layout_height="430px">

            <TextView
                android:id="@+id/tv_check_ticket_sure_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="236px"
                android:textColor="@color/main_yellow"
                android:textSize="26px"
                tools:text="好可惜啊，被别人抢先一步，还有更多彩票快去看看吧!" />

        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_check_ticket_sure_cancel"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="231px"
            android:background="@drawable/bg_widow_btn_gray"
            android:clickable="true"
            android:focusable="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="24px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_check_ticket_sure_go"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="37px"
            android:layout_toRightOf="@id/btn_check_ticket_sure_cancel"
            android:background="@drawable/bg_widow_btn_gray"
            android:clickable="true"
            android:focusable="true"
            android:text="去看看"
            android:textColor="@color/white"
            android:textSize="24px"
            android:transitionName="big_img"
            tools:ignore="UnusedAttribute" />

        <com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout
            android:id="@+id/fl_check_ticket_sure_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6px"
            android:layout_marginTop="6px"
            android:clickable="true"
            android:focusable="true"
            android:padding="20px">

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@drawable/img_chacha" />

        </com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>