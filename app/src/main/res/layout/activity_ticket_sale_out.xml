<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="900dp"
        android:layout_height="540dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_window_outer">

        <com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout
            android:id="@+id/fl_ticket_sale_out_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:padding="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_chacha" />

        </com.zhongti.huacailauncher.widget.bamUI.BamFrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:text="好可惜啊，被别人抢先一步，还有更多彩票快去看看吧!"
            android:textColor="@color/main_yellow"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_ticket_sale_out_cancel"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="231dp"
            android:background="@drawable/bg_widow_btn_gray"
            android:text="算了"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_ticket_sale_out_go"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="37dp"
            android:layout_toRightOf="@id/btn_ticket_sale_out_cancel"
            android:background="@drawable/bg_widow_btn_yellow"
            android:text="去看看"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>

</FrameLayout>