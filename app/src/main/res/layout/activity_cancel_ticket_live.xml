<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="900px"
        android:layout_height="540px"
        android:layout_gravity="center"
        android:background="@drawable/bg_window_outer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210px"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y10"
            android:text="@string/cancel_ticket_team"
            android:textColor="@color/live_red2"
            android:textSize="26px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_cancel_check_ticket_cancel"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="231px"
            android:background="@drawable/bg_widow_btn_gray"
            android:clickable="true"
            android:focusable="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="24px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_cancel_check_ticket_sure"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="37px"
            android:layout_toRightOf="@id/btn_cancel_check_ticket_cancel"
            android:background="@drawable/bg_widow_btn_red"
            android:clickable="true"
            android:focusable="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>