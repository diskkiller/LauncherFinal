<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_device_bind_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="98px"
        android:text="设备激活"
        android:textColor="@color/black1"
        android:textSize="36px" />

    <EditText
        android:id="@+id/et_device_bind_code"
        android:layout_width="1059px"
        android:layout_height="140px"
        android:layout_below="@+id/tv_device_bind_top_title"
        android:layout_marginLeft="150px"
        android:layout_marginTop="80px"
        android:background="@drawable/bg_device_bind_edit"
        android:gravity="center"
        android:hint="请输入商户预留手机号"
        android:paddingLeft="20px"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black3"
        android:textCursorDrawable="@drawable/cursor_device_bind_edit"
        android:textSize="30px" />

    <com.zhongti.huacailauncher.widget.bamUI.BamButton
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btn_device_bind_sure"
        android:layout_width="500px"
        android:layout_height="146px"
        android:layout_below="@+id/tv_device_bind_top_title"
        android:layout_marginLeft="45px"
        android:layout_marginTop="80px"
        android:layout_toRightOf="@+id/et_device_bind_code"
        android:background="@drawable/bg_btn_device_bind"
        android:text="激活"
        android:textColor="@color/white"
        android:textSize="64px"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_device_bind_step_bg"
        android:layout_width="1601px"
        android:layout_height="260px"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="52px"
        android:background="@drawable/bg_device_bind_step" />

    <TextView
        android:id="@+id/tv_device_bind_step_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_marginLeft="300px"
        android:layout_marginTop="38px"
        android:text="01"
        android:textColor="@color/black4"
        android:textSize="200px" />

    <TextView
        android:id="@+id/tv_device_bind_step_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_marginLeft="288px"
        android:layout_marginTop="38px"
        android:layout_toRightOf="@+id/tv_device_bind_step_num1"
        android:text="02"
        android:textColor="@color/black4"
        android:textSize="200px" />

    <TextView
        android:id="@+id/tv_device_bind_step_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_marginLeft="288px"
        android:layout_marginTop="38px"
        android:layout_toRightOf="@+id/tv_device_bind_step_num2"
        android:text="03"
        android:textColor="@color/black4"
        android:textSize="200px" />

    <TextView
        android:id="@+id/tv_device_bind_step_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_marginLeft="433px"
        android:layout_marginTop="128px"
        android:text="@string/device_bind_step1"
        android:textColor="@color/black2"
        android:textSize="36px" />

    <TextView
        android:id="@+id/tv_device_bind_step_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_marginLeft="260px"
        android:layout_marginTop="128px"
        android:layout_toRightOf="@+id/tv_device_bind_step_text1"
        android:text="@string/device_bind_step2"
        android:textColor="@color/black2"
        android:textSize="36px" />

    <TextView
        android:id="@+id/tv_device_bind_step_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_device_bind_code"
        android:layout_marginLeft="270px"
        android:layout_marginTop="128px"
        android:layout_toRightOf="@+id/tv_device_bind_step_text2"
        android:text="@string/device_bind_step3"
        android:textColor="@color/black2"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/iv_device_bind_er_code"
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_below="@id/iv_device_bind_step_bg"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56px"
        android:src="@drawable/img_huacai_gzh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_device_bind_er_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23px"
        android:text="华彩宝微信公众号"
        android:textColor="@color/black1"
        android:textSize="24px" />
</com.zhy.autolayout.AutoRelativeLayout>