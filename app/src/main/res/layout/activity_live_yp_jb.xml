<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_live_yp_jb_root"
        android:layout_width="900px"
        android:layout_height="540px"
        android:layout_gravity="center"
        android:background="@drawable/bg_window_outer_white">

        <TextView
            android:id="@+id/tv_live_yp_jb_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71px"
            android:layout_marginTop="62px"
            android:lineSpacingExtra="@dimen/y5"
            android:text="@string/jb_tips"
            android:textColor="@color/black2"
            android:textSize="24px" />


        <EditText
            android:id="@+id/et_live_yp_jb_content"
            android:layout_width="780px"
            android:layout_height="220px"
            android:layout_below="@id/tv_live_yp_jb_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:background="@drawable/bg_ypjb_edit"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="top"
            android:hint="请输入举报内容"
            android:inputType="textMultiLine"
            android:maxLength="600"
            android:padding="20px"
            android:scrollbars="none"
            android:textColor="@color/black2"
            android:textColorHint="@color/black3"
            android:textCursorDrawable="@null"
            android:textSize="24px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_live_yp_jb_cancel"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="231px"
            android:background="@drawable/bg_widow_btn_gray"
            android:clickable="true"
            android:focusable="true"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="24px" />

        <com.zhongti.huacailauncher.widget.bamUI.BamButton
            android:id="@+id/btn_live_yp_jb_sure"
            android:layout_width="200px"
            android:layout_height="60px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="37px"
            android:layout_toRightOf="@id/btn_live_yp_jb_cancel"
            android:background="@drawable/bg_widow_btn_red"
            android:clickable="true"
            android:focusable="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>