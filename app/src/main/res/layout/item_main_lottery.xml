<?xml version="1.0" encoding="utf-8"?>
<com.zhongti.huacailauncher.widget.bamUI.BamCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/x10"
    app:cardElevation="@dimen/x8"
    app:open_super="true">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_main_lottery_bg"
            android:layout_width="match_parent"
            android:layout_height="290px"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/x10"
            tools:src="@color/gray" />

        <TextView
            android:id="@+id/tv_item_main_lottery_award_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="229px"
            android:layout_marginTop="64px"
            android:textColor="@color/main_yellow"
            android:textSize="18px"
            tools:text="最高奖金" />

        <TextView
            android:id="@+id/tv_item_main_lottery_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="313px"
            android:layout_marginTop="103px"
            android:textColor="@color/main_red"
            android:textSize="34px"
            android:textStyle="bold"
            tools:text="25" />

        <TextView
            android:id="@+id/tv_item_main_lottery_award_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_item_main_lottery_award"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@id/tv_item_main_lottery_award"
            android:paddingBottom="3px"
            android:textColor="@color/main_red"
            android:textSize="24px"
            tools:text="万元" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="51px"
            android:layout_marginTop="49px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_main_lottery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20px"
                tools:text="面值" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_main_lottery_price_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="24px"
                    android:textStyle="bold"
                    tools:text="10" />

                <TextView
                    android:id="@+id/tv_item_main_lottery_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20px"
                    tools:text="元" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_item_main_lottery_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="49px"
            android:layout_marginTop="171px"
            android:maxLength="10"
            android:textColor="@color/main_yellow"
            android:textSize="18px"
            tools:text="销量 300" />

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhongti.huacailauncher.widget.bamUI.BamCardView>